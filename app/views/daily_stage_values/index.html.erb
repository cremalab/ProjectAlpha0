<h1>Listing daily_stage_values</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_stage_values.each do |daily_stage_value| %>
      <tr>
        <td><%= daily_stage_value.name%></td>
        <td><%= daily_stage_value.amount%></td>
        <td><%= link_to 'Show', daily_stage_value %></td>
        <td><%= link_to 'Edit', edit_daily_stage_value_path(daily_stage_value) %></td>
        <td><%= link_to 'Destroy', daily_stage_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

