<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Stripe ID</th>
      <th>Name</th>
      <th>Stage</th>
      <th>Assigned Hour</th>
      <th>Task Board</th>
      <th>Created At</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.stripe_id%></td>
        <td><%= task.name%></td>
        <td><%= task.stage%></td>
        <td><%= task.assigned_hour%></td>
        <td><%= task.task_board.name%></td>
        <td><%= task.created_at%></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
